{% extends 'base.html.twig' %}

{% block title %}Starshop!{% endblock %}

{% block body %}
    <h1>Startshop: your monopoly-busting option for Starshop parts!</h1>

    <div>
        Browse through {{ ships|length * 10 }} starships!

        {% if ships|length > 2 %}
            <p>
                {# Do youthink "" #}
                That's a shipload of ships!
            </p>
        {% endif %}
    </div>

    <div>
        <table>
            <caption><h2>My Ship</h2></caption>
            <tr>
                <th>Name</th>
                <td>
                    <a href="{{ path('app_starship_show', {id: myShip.id} ) }}">
                        {{ myShip.name }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ myShip.class }}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{{ myShip.captain |upper }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ myShip.status }}</td>
            </tr>
        </table>
    </div>
{% endblock %}